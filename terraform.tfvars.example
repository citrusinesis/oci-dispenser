# Example variable values
# Copy this file to terraform.tfvars and update with your actual values
# Note: terraform.tfvars should be added to .gitignore for security

# OCI Authentication - Get these from OCI Console
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaa..."
user_ocid        = "ocid1.user.oc1..aaaaaaaa..."
fingerprint      = "12:34:56:78:90:ab:cd:ef..."
private_key_path = "~/.oci/oci_api_key.pem"
region           = "us-ashburn-1"
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaa..."

# Instance Configuration
instance_name        = "my-ampere-instance"
instance_ocpus      = 4
instance_memory_gb  = 24
boot_volume_size_gb = 200

# SSH Public Key - Replace with your actual public key
ssh_public_key = "real pubkey"

# Environment
environment = "dev"